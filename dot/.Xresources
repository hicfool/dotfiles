#define font00 Terminus:style=Regular:size=11
#define base00 #37353e
#define base01 #ffffff

*.foreground:   base01
#ifdef background_opacity
*.background:   [background_opacity]base00
#else
*.background:   base00
#endif
*.cursorColor:  base01
*.color0:       base00
*.color1:       base01
*.color2:       base01
*.color3:       base01
*.color4:       base01
*.color5:       base01
*.color6:       base01
*.color7:       base01
*.color8:       base01
*.color9:       base01
*.color10:      base01
*.color11:      base01
*.color12:      base01
*.color13:      base01
*.color14:      base01
*.color15:      base01

xterm*faceName:                   font00
xterm*allowBoldFonts:             false
xterm*scaleHeight:                1
xterm*cursorTheme:                Adwaita
xterm*cursorBlink:                true
xterm*geometry:                   50x25
xterm*scrollBar:                  false
xterm*rightScrollBar:             true
xterm*borderColor:                base00
xterm*borderWidth:                0
xterm*internalBorder:             8
xterm*allowTcapOps:               false
xterm.vt100.scrollbar.foreground: base02

xclock*face:                      font00
xclock*render:                    false
xclock*background:                base00
xclock*foreground:                base01
xclock*hands:                     base01
xclock*majorColor:                base01
xclock*minorColor:                base01
xclock*highlight:                 base01

Nsxiv.window.background:          base00
Nsxiv.window.foreground:          base01
Nsxiv.bar.font:                   font00 
